{
  "name": "di-decos",
  "version": "1.0.0",
  "description": "A modern TypeScript Node.js API template with dependency injection, Drizzle ORM, and best practices for building scalable applications",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "nodemon",
    "build": "tsc",
    "lint": "eslint . --ext .ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:pull": "drizzle-kit pull",
    "db:check": "drizzle-kit check",
    "db:up": "drizzle-kit up",
    "db:studio": "drizzle-kit studio"
  },
  "keywords": [
    "typescript",
    "nodejs",
    "api",
    "template",
    "drizzle",
    "orm",
    "dependency-injection",
    "inversify",
    "postgresql",
    "rest-api",
    "express",
    "jwt",
    "authentication",
    "docker",
    "testing",
    "vitest",
    "openapi",
    "swagger",
    "migrations",
    "database"
  ],
  "author": "",
  "license": "ISC",
