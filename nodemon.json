{
    "watch": ["./src/**/*.ts"],
    "ext": "js,ts",
    "ignore": ["dist/**/*.spec.js", "dist/**/*.test.js"],
    "exec": "ts-node ./src/index.ts",
    "execMap": {
        "ts": "ts-node --esm"
    },
    "env": {
        "NODE_ENV": "development"
    },
    "restartable": "rs",
    "verbose": true
  }
